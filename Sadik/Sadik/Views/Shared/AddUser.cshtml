@model int
@{
    Layout = null;
}
<div class="block">
    <div class="block-title">
        <h2>Добавить воспитателя</h2>
    </div>
@{
    int KindergartenId = Model;
    using (Html.BeginForm("AddUser", "Kindergarten", new { KindergartenId = KindergartenId }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class=" control-label col-md-5" for="userReference">Емейл или ссылка на профиль</label>
            <div  class="col-md-7">
		        <input class="form-control" id="userReference" name="userReference" type="text" value="" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-7 col-md-offset-5">
	            <button class="btn btn-effect-ripple btn-primary" type="submit" autofocus>Добавить</button>
            </div>
        </div>
        if (ViewBag.ErrorMessage != null)
        {
	        <div class="form-group">
                <div class=" col-md-offset-5 col-md-7">
		            <div id="errorMessage" class="errorMessage help-block">@ViewBag.ErrorMessage</div>
                </div>
            </div>
        }
    }
}
</div>