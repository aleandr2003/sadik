@model RegisterModel
@{
    Layout = null;
}
<div class="col-md-4">
    <div class="block">
        <div class="block-title">
            <h2>Регистрация</h2>
        </div>

@using (Html.BeginForm<UserController>(x => x.Register(null, Request.Url.AbsoluteUri), FormMethod.Post, new { @class = "form-horizontal" }))
  {
    <div class="form-group">
		<label for="FirstName" class=" control-label col-md-3">Имя</label>
		<div class=" col-md-9">
            <input class="form-control" data-val="true" data-val-length="Имя должно быть не короче 3 и не длиннее 150 символов" data-val-length-max="150" data-val-length-min="3" data-val-required="Пожалуйста, введите свое имя" id="FirstName" name="FirstName" placeholder="Александр" type="text" value="">
            <div class="help-block"><span class="field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span></div>
        </div>
    </div>
    <div class="form-group">
   		<label for="LastName" class=" control-label col-md-3">Фамилия</label>
        <div class=" col-md-9">
		    <input class="form-control" data-val="true" data-val-length="Фамилия должна быть не короче 3 и не длиннее 150 символов" data-val-length-max="150" data-val-length-min="3" data-val-required="Пожалуйста, введите фамилию" id="LastName" name="LastName" placeholder="Пушкин" type="text" value="">
            <div class="help-block"><span class="field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span></div>
        </div>
    </div>
    <div class="form-group">
		<label for="Email" class=" control-label col-md-3">E-mail</label>
        <div class=" col-md-9">
		    <input class="form-control" data-val="true" data-val-email="Введен некорректный e-mail" data-val-email-email="true" data-val-required="Пожалуйста, введите e-mail" id="Email" name="Email" placeholder="alepush@gmail.com" type="text" value="">
            <div class="help-block"><span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span></div>
        </div>
    </div>
    <div class="form-group">
		<label for="Password" class=" control-label col-md-3">Пароль</label>
        <div class=" col-md-9">
		    <input class="form-control" data-val="true" data-val-length="Пароль должен быть не короче 3 и не длиннее 32 символов" data-val-length-max="32" data-val-length-min="3" data-val-required="Пожалуйста, введите пароль" id="Password" name="Password" placeholder="придумайте пароль" type="password">
		    <div class="help-block"><span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span></div>
        </div>
    </div>
    <div class="form-group form-actions">
        <div class="col-md-3 col-md-offset-3">
	        <button class="js_submitButton btn btn-effect-ripple btn-primary" type="submit" autofocus>Зарегистрировать</button>
        </div>
    </div>
    if(ViewBag.ErrorMessage != null)
    {
    <div class="form-group">
        <div class=" col-md-offset-3 col-md-9">
		        <div id="errorMessage" class="errorMessage help-block">@ViewBag.ErrorMessage</div>
        </div>
    </div>
    }
  }
    </div>
</div>