@model EditKidModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <div class="block">
            <div class="block-title">
                <h2>Редактировать профиль</h2>
            </div>

    @using (Html.BeginForm("EditKid", "Kids", new { Id = Model.Id, KindergartenId = ViewBag.KindergartenId }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class=" control-label col-md-5" for="FirstName">Имя</label>
            <div  class="col-md-7">
                @Html.TextBoxFor(x => x.FirstName, new { @class="form-control", placeholder = "Александр" })
                <span class="field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-5" for="LastName">Фамилия</label>
            <div  class="col-md-7">
                @Html.TextBoxFor(x => x.LastName, new { @class="form-control", placeholder = "Пушкин" })
                <span class="field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-5" for="Patronymic">Отчество</label>
            <div  class="col-md-7">
                @Html.TextBoxFor(x => x.Patronymic, new { @class="form-control", placeholder = "Сергеевич" })
                <span class="field-validation-valid" data-valmsg-for="Patronymic" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-5" for="DateOfBirth">День рождения</label>
            <div  class="col-md-7">
                @Html.EditorFor(x => x.DateOfBirth)
                <span class="field-validation-valid" data-valmsg-for="DateOfBirth" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-5" for="DateAccepted">Принят в садик</label>
            <div  class="col-md-7">
                @Html.EditorFor(x => x.DateAccepted)
                <span class="field-validation-valid" data-valmsg-for="DateAccepted" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-7 col-md-offset-5">
	            <button class="btn btn-effect-ripple btn-primary" type="submit" autofocus>Сохранить</button>
            </div>
        </div>
        if (ViewBag.ErrorMessage != null)
        {
	        <div class="form-group">
                <div class=" col-md-offset-5 col-md-7">
		            <div id="errorMessage" class="errorMessage help-block">@ViewBag.ErrorMessage</div>
                </div>
            </div>
        }
    }
        </div>
    </div>
</div>